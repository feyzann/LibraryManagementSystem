@model List<IleriWebProject.Models.VUserBorrowedBook>

<div class="container mt-4">
	<h1 class="display-5">Kitap Listesi</h1>
	<table class="table table-striped table-bordered">
		<thead class="thead-dark">
			<tr>
				<th>Kullanıcı</th>
				<th>Kitap</th>
				<th>Kiralama Başlangıç Tarihi</th>
				<th>Kiralama Dönüş Tarihi</th>
				<th>Kullanıcı Telefon Numarası</th>
				<th>Süre</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Count > 0)
			{
				@foreach (var book in Model)
				{
					<tr>
						<td>@book.FullName</td>
						<td>@book.BookName</td>
						<td>@book.BorrowDate</td>
						<td>@book.ReturnDate</td>
						<td>@book.MaskedPhoneNumber</td>
						<td>@book.DaysSinceBorrowed</td>
						@if(book.ReturnDate == null){
							<td>
								<button class="btn btn-warning"> <a href="~/Home/BorrowTransactionBook?transId=@book.TransactionId" style="text-decoration:none;color:white;">İade et</a></button>
							</td>
						}else{
							<td>@book.ReturnDate Bu tarihte iade ettiniz</td>
						}
					
					</tr>
				}
			}
		</tbody>
	</table>
</div>